Package: kernelshap
Title: Kernel SHAP
Version: 0.9.1
Authors@R: c(
    person("Michael", "Mayer", , "mayermichael79@gmail.com", role = c("aut", "cre"),
           comment = c(ORCID = "0009-0007-2540-9629")),
